#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	char a = 3;
	//00000000000000000000000000000011(二进制表达）
	//                        00000011(由于char为字符型，只能储存一个字节，故只储存后8个比特位）    
	char b = 127;
	//00000000000000000000000001111111
	//                        01111111(同上)
	char c = a + b;
	//a+b要进行整型提升
	//00000000000000000000000000000011（由于最高位是零，故左边均补零）
	//00000000000000000000000001111111（由于最高位是零，故左边均补零）
	//00000000000000000000000010000010（相加的结果）赋值给c
	//但由于c也是char类型，只能储存一个字节，故同理
	//10000010
	//由于输出类型为%d,为整形，故要再进行整型提升
	//由于最高位是1，故补1
	//11111111111111111111111110000010(补码）
	//11111111111111111111111110000001(反码）（补码-1)
	//10000000000000000000000001111110(源码）（除符号位取反）
	//故输出结果为-126
	printf("%d\n", c);
	return 0;
}
