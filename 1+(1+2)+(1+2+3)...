#define CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<math.h>
#include<string.h>
int main()
{
	int r = 0;
	int i = 0;
	int j = 0;
	int sum = 0;
	int n = 0;
	printf("请输入n:");
	scanf_s("%d", &n);
	for (i = 1; i <= n; i++)
	{
		r = 0;
		for (j = 1; j <= i; j++)
		{
			r = r + j;
		}
		sum += r;
	}
	printf("累加求和的值为:%d\n", sum);
